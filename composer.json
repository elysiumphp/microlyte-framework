{
    "name": "elysiumphp/microlyte-framework",
    "type": "library",
    "description": "The Elysium MicroLyte Framework.",
    "keywords": [
        "elysiumphp",
        "microlyte-framework",
        "psr"
    ],
    "homepage": "https://github.com/elysiumphp/microlyte-framework",
    "license": "MIT",
    "support": {
        "issues": "https://github.com/elysiumphp/microlyte-framework/issues",
        "source": "https://github.com/elysiumphp/microlye-framework"
    },
    "authors": [
        {
            "name": "Joseph Asamoah",
            "email": "asamoahjoseph@gmail.com",
            "homepage": "https://github.com/jobasco",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.4 || ^8.2",
        "ext-json": "*",
        "monolog/monolog": "^3.7",
        "php-di/php-di": "^7.0",
        "php-di/slim-bridge": "^3.4",
        "psr/cache": "^3.0",
        "psr/event-dispatcher": "^1.0",
        "psr/log": "^3.0",
        "slim/psr7": "^1.7",
        "slim/slim": "^4.14",
        "slim/twig-view": "^3.4",
        "symfony/console": "^7.1",
        "symfony/finder": "^7.1",
        "vlucas/phpdotenv": "^5.6"
    },
    "require-dev": {
        "jangregor/phpstan-prophecy": "^1.0.0",
        "phpspec/prophecy-phpunit": "^2.2",
        "phpstan/extension-installer": "^1.3.1",
        "phpstan/phpstan": "^1.10",
        "phpunit/phpunit": "^9.6.17",
        "squizlabs/php_codesniffer": "^3.9"
    },
    "autoload": {
        "psr-4": {
            "Ultra\\": "src/Ultra/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Ultra\\": "tests"
        }
    },
    "scripts": {
        "test": "phpunit",
        "check-style": "phpcs src tests",
        "fix-style": "phpcbf src tests"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "phpstan/extension-installer": true
        }
    }
}